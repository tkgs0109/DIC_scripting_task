<div class="row taskPanel">
  <div class="contents col-xs-7">
    <p class="taskTitle"><strong><%= task.title %></strong></p>
    <p class="taskContent"><%= task.content %></p>
  </div>
  <div class="links col-xs-4">
    <%= link_to '下位タスク確認', task, class:'btn btn-default' %>
    <%= link_to '下位タスク作成', new_task_path(task), class:'btn btn-default' %>
    <%= link_to '編集', edit_task_path(task), class:'btn btn-info' %>
    <%= link_to '削除', task, method: :delete, data:{confirm:'本当に削除しますか?'}, class:'btn btn-danger' %>
  </div>
  <div class="completed col-xs-1">
    <%= form_with(model: task, local: true) do |f| %>
      <% if task.done == true %>
        <%= f.hidden_field :done, value: false %>
        <%= button_tag "完了取消", type: 'submit', class:'btn btn-default glyphicon glyphicon-remove' %>
      <% else %>
        <%= f.hidden_field :done, value: true %>
        <%= button_tag "完了する", type: 'submit', class:'btn btn-default glyphicon glyphicon-ok' %>
      <% end %>
    <% end %>
  </div>
</div>
